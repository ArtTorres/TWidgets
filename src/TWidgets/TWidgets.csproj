<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.0;netstandard2.0;net40;net45</TargetFrameworks>
    <Version>0.1.0-alpha</Version>
    <Authors>Arturo Torres</Authors>
    <PackageId>ArturoTorres.TWidgets</PackageId>
    <Company>Arturo Torres</Company>
    <Copyright>Copyright Â©2019 ArturoTorres</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/arttorres/TWidgets/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/arttorres/TWidgets</PackageProjectUrl>
    <RepositoryUrl>https://github.com/arttorres/TWidgets</RepositoryUrl>
    <PackageTags>console framework widgets</PackageTags>
    <Description>A Text-based widget framework for console applications.</Description>
    <RepositoryType>Git</RepositoryType>
    <PackageReleaseNotes>Initial release for TWidgets</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SignAssembly>false</SignAssembly>
    <PackageIconUrl>https://github.com/ArtTorres/TWidgets/raw/master/doc/nuget/logo.png</PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ApplicationOptions.cs" />
    <Compile Remove="Core\Workflow.cs" />
    <Compile Remove="QApplication.cs" />
    <Compile Remove="Util\AssemblyDescription.cs" />
    <Compile Remove="Widgets\Container.cs" />
    <Compile Remove="Widgets\HelpDescription.cs" />
    <Compile Remove="Widgets\InputWidget.cs" />
    <Compile Remove="Widgets\ProgressChar.cs" />
    <Compile Remove="Widgets\ProgressList.cs" />
    <Compile Remove="Widgets\ProgressWidget.cs" />
  </ItemGroup>

</Project>
